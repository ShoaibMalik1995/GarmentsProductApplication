@using EVS.Dotnet328.GarmentsShop.Models
@using EVS.Dotnet328.GarmentsShop.Models.Users
@model LoginModel

@{
    ViewBag.Title = "Recover Password";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
    AlertModel alertmessage = TempData["AlertMessage"] as AlertModel;
}

@if (alertmessage != null)
{
    @Html.Partial("~/Views/Shared/_AlertView.cshtml", alertmessage);
}

@using (Html.BeginForm("RecoverPassword", "Users", FormMethod.Post, new { id = "recoverpasswordform" }))
{
    <div class="form-group">
        <div class="input-group has-feedback">
            <span class="input-group-addon label-info" style="background-color:aliceblue"><span class="glyphicon glyphicon-envelope"></span></span>
            @Html.TextBoxFor(m => m.LoginId, new { placeholder = "abc@gmail.com", @class = "form-control" })
            <span class="form-control-feedback"></span>
        </div>
    </div>

    <div class="form-group" style="text-align:center">
        <button type="submit" class="btn btn-info"><span class="glyphicon glyphicon-log-in"></span>  Recover Password</button>
    </div>
}


@section modalfooter{
    <div>
        <small class="pull-right">
            <a href="/users/signup"><span class="glyphicon glyphicon-user"></span> Sign Up</a> |  <a href="/users/RecoverPassword"><span class="glyphicon glyphicon-log-in"></span> Login</a>
        </small>
        <div class="clearfix"></div>
    </div>
}

@section myScript{
    <script type="text/javascript">
        $(function () {
            $(".alert").fadeTo(5000, 1).fadeOut(1000);
        });
    </script>
}

