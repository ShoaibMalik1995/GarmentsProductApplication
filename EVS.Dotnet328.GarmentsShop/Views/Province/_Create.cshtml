@using EVS.Dotnet328.GarmentsShop.Models

@model ProvinceModal

@using (Html.BeginForm("Create", "Province", FormMethod.Post, new { id = "createProvinceform" }))
{
    <div class="form-group">
        <div class="input-group has-feedback">
            <span class="input-group-addon"><span>Countries</span></span>
            @Html.DropDownListFor(m => m.Country_Id ,(IEnumerable<SelectListItem>)ViewBag.Country, "- Select Country -", new { @class = "form-control" })
        </div>
    </div>

    <div class="form-group">
        <div class="input-group has-feedback">
            <span class="input-group-addon"><span>Province</span></span>
            @Html.TextBoxFor(m => m.Name, new { placeholder = "Province Name", type = "text", @class="form-control" })
        </div>
    </div>

    <div class="form-group modal-footer">
        <button type="submit" class="btn btn-success"><span class="glyphicon glyphicon-floppy-saved"></span> Save</button>
        <button type="reset" class="btn btn-info" data-dismiss="modal"><span class="glyphicon glyphicon-refresh"></span> Refresh</button>
    </div>
}
